{
  "name": "coingate-sdk",
  "version": "1.0.0",
  "description": "Coingate package",
  "main": "./lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "lint": "eslint",
    "lint:fix": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "MIT",
  "author": {
    "name": "Konkurenta",
    "email": "yo@konkurenta.com",
    "url": "https://github.com/konkurenta"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "vscode",
    "jest",
    "commitizen",
    "semantic-release"
  ],
  "bugs": {
    "url": "https://github.com/ryansonshine/typescript-npm-package-template/issues"
  },
  "homepage": "https://github.com/ryansonshine/typescript-npm-package-template#readme",
  "devDependencies": {
    "eslint": "^8.23.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@typescript-eslint/parser": "^4.22.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.2.0",
    "lint-staged": "^10.5.4",
    "ts-jest": "^27.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
